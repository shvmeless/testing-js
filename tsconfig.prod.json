{
	"compilerOptions": {
		"moduleResolution": "node",
		"module": "CommonJS",
		"target": "es2016",
		"rootDir": "./src",
		"outDir": "./dist",
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"declaration": true,
		"sourceMap": false,
		"strict": true,
	},
	"include": [
		"./src"
	]
}
